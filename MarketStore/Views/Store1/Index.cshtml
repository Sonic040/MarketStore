@model IEnumerable<MarketStore.Models.Store1>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Namestore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namestore)
            </td>
            <td>
                <img src="~/image/@item.Img" asp-append-version="true" with="100" height="100" />d>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Storeid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Storeid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Storeid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
